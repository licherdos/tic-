#include <stdio.h>

int main()
{
    int horas;
    int minutos;
    int segundos; 
    
    printf("Horas:");
    scanf("%d", &horas);
    printf("\n");
    
    printf("Minutos:");
    scanf("%d", &minutos);
    printf("\n");

    printf("segundos:");
    scanf("%d", &segundos);
    printf("\n");
    
    int total = (horas * 3600) + (minutos * 60) + segundos;
    printf("Total de segundos: %d", total);
    return 0;
}
